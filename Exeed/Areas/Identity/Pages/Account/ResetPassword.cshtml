@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Сброс пароля";
}

<section class="form-section full">
    <div class="section__bg pc" style="background-image: url(../../img/form/pc-bg.jpg)"></div>
    <div class="section__bg xs" style="background-image: url(../../img/form/xs-bg.jpg)"></div>
    <div class="container">
        <form class="form__box" method="post">
            <div class="form__inner">
                <h2 class="s-title">Введите новый пароль</h2>
                <input asp-for="Input.Code" type="hidden" />
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" type="hidden" />
                <input asp-for="Input.Password" class="t-input" autocomplete="new-password" aria-required="true" placeholder="Пароль" />
                <input asp-for="Input.ConfirmPassword" class="t-input" autocomplete="new-password" aria-required="true" placeholder="Повтор пароля" />
                <button class="t-btn brown" type="submit">
                    <span>Поменять пароль</span>
                </button>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="text-align:center"></span>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
